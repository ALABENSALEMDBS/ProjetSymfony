        <tbody>
          {% for livre in liste %}
          <tr>
            {# <td>{{ livre.id }}</td> #}
            <td>{{ livre.TitreLivre|upper }}</td>
            <td>{{ livre.AuteurLivre }}</td>
            {# <td>{{ livre.IsbnLivre }}</td> #}
            {# <td>{{ livre.NombreExemplaireLivre }}</td> #}
            <td>{{ livre.AnneePublicationLivre|date('Y-m-d') }}</td>
            <td>{{ livre.getCategory() ? livre.getCategory().getNom() : 'Aucune catégorie' }}</td>
            <td>
              <img src="{{ asset('uploads/images/' ~ livre.ImageLivre) }}" alt="{{ livre.TitreLivre }}" width="100" />
            </td>
            <td>
              {% if livre.NombreExemplaireLivre > 0 %}
              <a href="{{ path('app_livre_reserver', { id: livre.id }) }}" class="btn btn-primary">Réserver</a>
              {% else %}
              <button class="btn btn-secondary" disabled>Indisponible</button>
              {% endif %}
            </td>
            <td>
                {% if livre.NombreExemplaireLivre > 0 %}
            <!-- Bouton vert pour "Emprunter" -->
            <a href="{{ path('app_livre_emprunter', { id: livre.id }) }}" class="btn btn-success">Emprunter</a>
                {% else %}
              <button class="btn btn-secondary" disabled>Indisponible</button>
