<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Livres</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="{{ asset('images/gt_favicon.png') }}">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">

    <style>
        /* Style pour le tableau */
        .table-books {
            width: 100%;
            margin-top: 20px;
        }
        .table-books th, .table-books td {
            text-align: center;
            padding: 10px;
        }

        .book-widget img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
        }

        .book-widget {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
            padding: 10px;
            background-color: #fff;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .col-md-6 {
            width: 48%;
            margin-bottom: 20px;
        }

        @media (max-width: 767px) {
            .col-md-6 {
                width: 100%;
            }
        }
    </style>

</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top headroom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('app_test') }}">
                    <img src="{{ asset('images/logo.png') }}" alt="Logo">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li><a href="{{ path('app_test') }}">Home</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('contact') }}">Contact</a></li>
                    <li class="active"><a href="#">Livres</a></li>
                    <li><a class="btn" href="{{ path('singn_in') }}">SIGN IN / SIGN UP</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header Section -->
    <header id="head" class="secondary"></header>

    <!-- Main Content -->
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('app_test') }}">Home</a></li>
            <li class="active">Livres</li>
        </ol>

        <div class="row">
            <main class="col-md-8 maincontent">
                <header class="page-header">
                    <h1 class="page-title">Découvrez nos livres</h1>
                    <div class="btn-group">
                        <button id="listViewBtn" class="btn btn-primary active">Liste</button>
                        <button id="tableViewBtn" class="btn btn-secondary">Tableau</button>
                    </div>
                </header>

                <!-- Book List View -->
                <div id="listView" class="row">
                    {% for book in books %}
                    <div class="col-md-6">
                        <div class="book-widget">
                            <div class="thumbnail">
                                <img src="{{ asset('uploads/photos/' ~ book.imageLivre) }}" alt="{{ book.TitreLivre }}">
                                <h3>{{ book.TitreLivre }}</h3>
                                <p>Auteur: {{ book.AuteurLivre }}</p>
                                <p>ISBN: {{ book.IsbnLivre }}</p>
                                <p>Publication: {{ book.AnneePublicationLivre|date('Y-m-d') }}</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <!-- Book Table View -->
                <table id="tableView" class="table-books table table-striped" style="display:none;">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>ISBN</th>
                            <th>Publication</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                        <tr>
                            <td>{{ book.TitreLivre }}</td>
                            <td>{{ book.AuteurLivre }}</td>
                            <td>{{ book.IsbnLivre }}</td>
                            <td>{{ book.AnneePublicationLivre|date('Y-m-d') }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>

            <aside class="col-md-4 sidebar sidebar-left">
                <div class="widget">
                    <h4>Filtrer les livres</h4>
                    <form method="get">
                        <input type="text" name="query" class="form-control" placeholder="Chercher un livre...">
                        <button type="submit" class="btn btn-default">Chercher</button>
                    </form>
                </div>
                <div class="widget">
                    <h4>Catégories Populaires</h4>
                    <ul>
                        <!-- Exemple dynamique -->
                        <!-- <li><a href="#">Science Fiction</a></li> -->
                    </ul>
                </div>
            </aside>
        </div>
    </div>

    <!-- Footer -->
    <footer id="footer" class="top-space">
        <div class="footer1">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 widget">
                        <h3>Contact</h3>
                        <p>
                            +216 28.132.223<br>
                            <a href="mailto:#">biblionet@esprit.tn</a><br>
                            1, 2 rue André Ampère - 2083 - El Ghazala.
                        </p>
                    </div>
                    <div class="col-md-3 widget">
                        <h3>Follow Us</h3>
                        <p>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer2">
            <div class="container">
                <p class="text-right">© 2024 Designed by DEV-CORE</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="{{ asset('js/template.js') }}"></script>

    <script>
        // JavaScript pour changer la vue
        document.getElementById('listViewBtn').addEventListener('click', function () {
            document.getElementById('listView').style.display = 'flex';
            document.getElementById('tableView').style.display = 'none';
            this.classList.add('active');
            document.getElementById('tableViewBtn').classList.remove('active');
        });

        document.getElementById('tableViewBtn').addEventListener('click', function () {
            document.getElementById('tableView').style.display = 'table';
            document.getElementById('listView').style.display = 'none';
            this.classList.add('active');
            document.getElementById('listViewBtn').classList.remove('active');
        });
    </script>
</body>

</html>
